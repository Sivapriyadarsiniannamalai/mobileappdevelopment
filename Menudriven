mainactivity2.java

package com.example.menu;

import android.os.Bundle;
import android.widget.Button;
import android.widget.EditText;
import android.widget.Toast;
import androidx.appcompat.app.AppCompatActivity;

public class MainActivity2 extends AppCompatActivity {
    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setTitle("Palindrome Checker");
        setContentView(R.layout.activity_main2); // Ensure this matches your XML file

        EditText input = findViewById(R.id.editTextText);
        Button checkButton = findViewById(R.id.button);

        checkButton.setOnClickListener(v -> {
            String inputStr = input.getText().toString().trim();
            if (inputStr.isEmpty()) {
                Toast.makeText(this, "Please enter a number", Toast.LENGTH_SHORT).show();
                return;
            }
            try {
                int num = Integer.parseInt(inputStr);
                if (num < 0) {
                    Toast.makeText(this, "Please enter a non-negative number", Toast.LENGTH_SHORT).show();
                    return;
                }
                if (isPalindrome(num)) {
                    Toast.makeText(this, num + " is a palindrome", Toast.LENGTH_SHORT).show();
                } else {
                    Toast.makeText(this, num + " is not a palindrome", Toast.LENGTH_SHORT).show();
                }
            } catch (NumberFormatException e) {
                Toast.makeText(this, "Invalid input. Enter a valid number", Toast.LENGTH_SHORT).show();
            }
        });
    }

    private boolean isPalindrome(int num) {
        int original = num;
        int reversed = 0;
        while (num > 0) {
            int digit = num % 10;
            reversed = reversed * 10 + digit;
            num /= 10;
        }
        return original == reversed;
    }
}

mainactivity3.java

package com.example.menu;

import android.os.Bundle;
import android.widget.Button;
import android.widget.EditText;
import android.widget.Toast;
import androidx.appcompat.app.AppCompatActivity;

public class MainActivity3 extends AppCompatActivity {
    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setTitle("Armstrong Checker");
        setContentView(R.layout.activity_main3); // Matches the XML file name

        EditText input = findViewById(R.id.editTextText2);
        Button checkButton = findViewById(R.id.button2);

        checkButton.setOnClickListener(v -> {
            String inputStr = input.getText().toString().trim();
            if (inputStr.isEmpty()) {
                Toast.makeText(this, "Please enter a number", Toast.LENGTH_SHORT).show();
                return;
            }
            try {
                int num = Integer.parseInt(inputStr);
                if (num < 0) {
                    Toast.makeText(this, "Please enter a non-negative number", Toast.LENGTH_SHORT).show();
                    return;
                }
                if (isArmstrong(num)) {
                    Toast.makeText(this, num + " is an Armstrong number", Toast.LENGTH_SHORT).show();
                } else {
                    Toast.makeText(this, num + " is not an Armstrong number", Toast.LENGTH_SHORT).show();
                }
            } catch (NumberFormatException e) {
                Toast.makeText(this, "Invalid input. Enter a valid number", Toast.LENGTH_SHORT).show();
            }
        });
    }

    private boolean isArmstrong(int num) {
        int original = num;
        int sum = 0;
        int digits = String.valueOf(num).length();
        while (num > 0) {
            int digit = num % 10;
            sum += (int) Math.pow(digit, digits);
            num /= 10;
        }
        return sum == original;
    }
}
